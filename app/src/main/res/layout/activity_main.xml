<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d132c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="PokÃ©dex"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="65sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/montserrat"
            android:text="By - Infamous_looney"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/all_pokemon_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_button"
            android:elevation="10dp"
            android:fontFamily="@font/rubik_medium"
            android:text="All Pokemon"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/item_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:elevation="10dp"
            android:fontFamily="@font/rubik_medium"
            android:text="Items"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/location_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:elevation="10dp"
            android:fontFamily="@font/rubik_medium"
            android:text="Locations"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/type_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:elevation="10dp"
            android:fontFamily="@font/rubik_medium"
            android:text="Types"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/region_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:elevation="10dp"
            android:fontFamily="@font/rubik_medium"
            android:text="Region"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginRight="75dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Powered By -"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pokeapi_icon" />
    </LinearLayout>
</ScrollView>